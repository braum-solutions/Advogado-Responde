<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.braumsolutions.advogadoresponde">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".View.Profile.UserProfileActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".View.Profile.LawyerProfileActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".View.Cases.ReportCaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Cases.LawyerCasesActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.Main.MainActivity" />
        </activity>
        <activity
            android:name=".View.Profile.ViewUserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Chat.ListChatActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.Main.MainActivity" />
        </activity>
        <activity
            android:name=".View.Cases.OpenCaseActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.Cases.CasesActivity" />
        </activity>
        <activity
            android:name=".View.Cases.CasesActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.Main.MainActivity" />
        </activity>
        <activity
            android:name=".View.NewCase.DescriptionCaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.NewCase.FileCaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.NewCase.OccupationAreaCaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Chat.ChatActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.Cases.OpenCaseActivity" />
        </activity>
        <activity
            android:name=".View.Cases.YourCasesActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.Main.MainActivity" />
        </activity>
        <activity
            android:name=".View.Profile.EditLawyerProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Profile.EditUserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Others.AboutActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.Main.MainActivity" />
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".View.Login.UserImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Login.LawyerCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Login.TypeRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Login.NameRegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Login.ConfirmEmailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Others.PrivacyPoliceActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.Login.NameRegisterActivity" />
        </activity>
        <activity
            android:name=".View.Login.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Login.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.Main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>